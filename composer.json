{
    "name": "italystrap/config",
    "description": "ItalyStrap Config Module - a simple and useful configuration package the OOP way",
    "keywords": ["Config", "Configuration Object"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Enea Overclokk",
            "email": "info@overclokk.net",
            "homepage": "https://www.italystrap.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : ">=7.4"
    },
    "require-dev": {
        "lucatume/wp-browser": "^2.0",
        "lucatume/function-mocker-le": "^1.0",
        "codeception/module-asserts": "^2.0",
        "phpspec/prophecy": "^1.15",
        "infection/infection": "^0.26.6",
        "rector/rector": "^0.14.0",
        "vimeo/psalm": "^4.26",
        "infection/codeception-adapter": "^0.4.1",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "phpbench/phpbench": "^1.2",
        "italystrap/event": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "ItalyStrap\\Config\\": "src/"
        },
        "classmap": [
            "legacy/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "psr-4": {
            "ItalyStrap\\Tests\\": "tests/"
        },
        "files": [
            "tests/_data/Stubs/ConfigKeys.php"
        ]
    },
    "suggest": {
        "italystrap/event": "EventDispatcher for WordPress"
    },
    "scripts": {
        "test": [
            "@cs",
            "@psalm",
            "@unit",
            "@infection"
        ],
        "cs": [
            "@php vendor/bin/phpcs -p --ignore=./tests/_support/* ./src/ ./tests/"
        ],
        "cs:fix": [
            "vendor\\bin\\phpcbf -p --ignore=./tests/_support/* ./src/ ./tests/ && vendor\\bin\\phpcs -p --ignore=./tests/_support/* ./src/ ./tests/"
        ],
        "phpstan": [
            "vendor\\bin\\phpstan analyze --level=max"
        ],
        "psalm": [
            "vendor\\bin\\psalm --no-cache"
        ],
        "static:all": [
            "vendor\\bin\\phpstan analyze --level=max && vendor\\bin\\psalm"
        ],
        "unit": [
            "vendor\\bin\\codecept run unit",
            "@clean"
        ],
        "unit:debug": [
            "vendor\\bin\\codecept run unit --debug",
            "@clean"
        ],
        "infection": [
            "vendor\\bin\\infection --threads=4"
        ],
        "bench": [
            "vendor\\bin\\phpbench run --report=stats"
        ],
        "bench:prev": [
            "vendor\\bin\\phpbench run --report=stats --tag=original"
        ],
        "bench:compare:prev": [
            "vendor\\bin\\phpbench run --report=stats --ref=original"
        ],
        "metrics": [
            "vendor\\bin\\phpmetrics --report-html='./tests/_output/report' ./src"
        ],
        "insights": [
            "vendor\\bin\\phpinsights"
        ],
        "clean": [
            "vendor\\bin\\codecept clean"
        ]
    },
    "support"    : {
        "issues": "https://github.com/ItalyStrap/config/issues",
        "source": "https://github.com/ItalyStrap/config"
    },
    "config": {
        "allow-plugins": {
            "codeception/c3": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    }
}
